{
    "manifest_version": 3,
    "name": "UserTune",
    "version": "1.0",
    "description": "Accessibility web browsing, redefined.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "logo.png"
    },
    "permissions": ["activeTab"],
    "content_security_policy": "script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval' 'inline-speculation-rules'; object-src 'self'"
  }
  